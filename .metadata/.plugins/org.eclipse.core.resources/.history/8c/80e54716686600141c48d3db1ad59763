package argumentFramework;

public class Argument {
	private String argumentID;
	private String opinion;
	private float strength;

	public Argument(String argumentID, String opinion){
		this(argumentID, opinion, 0.0f);
	}

	public Argument(String argumentID, String opinion, float strength){
		this.argumentID = argumentID;
		this.opinion = opinion;
		this.strength = strength;
	}

	public String getID(){ return this.argumentID; }
	public String getOpinion(){ return this.opinion; }
	public float getStrength(){ return this.strength; }
}
